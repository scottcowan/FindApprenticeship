@model IList<SFA.Apprenticeships.Web.Raa.Common.ViewModels.Application.QualificationViewModel>

    <h2 class="heading-large">Qualifications</h2>

    @if (!Model.Any())
    {
        <p id="no-qualifications">Applicant doesn't have any qualifications</p>
    }

    @foreach (var group in Model.GroupBy(item => item.QualificationType))
    {
        <h3 class="heading-medium">@Html.Encode(group.Key)</h3>
        <table class="">
            <colgroup>
                <col class="t40">
                <col class="t25">
                <col class="t15">
                <col>
            </colgroup>
            <thead>
                <tr>
                    <th>
                        <span class="heading-span">Subject</span>
                    </th>
                    <th>
                        <span class="heading-span">Grade</span>
                    </th>
                    <th>
                        <span class="heading-span">Year</span>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in group)
                {
                    <tr>
                        <td>
                            @item.Subject
                        </td>
                        <td>
                            @QualificationPresenter.GetDisplayGrade(item.Grade, item.IsPredicted)
                        </td>
                        <td>
                            @item.Year
                        </td>
                    </tr>
                }
            </tbody>
        </table>       
    }
<hr /> 